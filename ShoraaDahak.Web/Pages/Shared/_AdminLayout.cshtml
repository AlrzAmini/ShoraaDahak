@using Microsoft.AspNetCore.Mvc.RazorPages
@using ShoraaDahak.Core.Consts
@using ShoraaDahak.Core.Services.Interfaces
@using System.Security.Claims
@inject IPermissionService _permissionService;
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>پنل مدیریت | @ViewData["Title"]</title>

    <!-- Core CSS - Include with every page -->
    <link href="/AdminPanel/css/bootstrap-rtl.css" rel="stylesheet">
    <link href="/AdminPanel/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- Page-Level Plugin CSS - Dashboard -->
    <link href="/AdminPanel/css/plugins/morris/morris-0.4.3.min.css" rel="stylesheet">
    <link href="/AdminPanel/css/plugins/timeline/timeline.css" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="/AdminPanel/css/sb-admin.css" rel="stylesheet">

    <link rel="stylesheet" href="https://unpkg.com/persian-datepicker@1.2.0/dist/css/persian-datepicker.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">

</head>

<body>

    <div id="wrapper">

        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Admin"> DahakoDolatAbad.ir </a>
            </div>
            <!-- /.navbar-top-links -->

            <div class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>

                        </li>
                        <li>
                            <a href="/Admin"><i class="fa fa-dashboard fa-fw"></i> پنل ادمین </a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> مدیریت <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                @if (_permissionService.CheckPermission(PerIds.AdminUsers, User.FindFirstValue(ClaimTypes.Email)))
                                {
                                    <li>
                                        <a href="/Admin/Users">کاربران</a>
                                    </li>
                                }
                                @if (_permissionService.CheckPermission(PerIds.AdminRoles, User.FindFirstValue(ClaimTypes.Email)))
                                {
                                    <li>
                                        <a href="/Admin/Roles">نقش ها</a>
                                    </li>
                                }
                                @if (_permissionService.CheckPermission(PerIds.AdminServices, User.FindFirstValue(ClaimTypes.Email)))
                                {
                                    <li>
                                        <a href="#">بخش خدمات<span class="fa arrow"></span></a>
                                        <ul class="nav nav-third-level">
                                            <li>
                                                <a href="/Admin/ServiceGroups"> گروه های خدمات</a>
                                            </li>
                                            <li>
                                                <a href="/Admin/Services">خدمات</a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                @if (_permissionService.CheckPermission(PerIds.AdminLetters, User.FindFirstValue(ClaimTypes.Email)))
                                {
                                    <li>
                                        <a href="/Admin">بخش نامه ها<span class="fa arrow"></span></a>
                                        <ul class="nav nav-third-level">
                                            <li>
                                                <a href="/Admin/LetterTos"> مقصد های نامه ها</a>
                                            </li>
                                            <li>
                                                <a href="/Admin/Letters">نامه ها</a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                @if (_permissionService.CheckPermission(PerIds.AdminQuotes, User.FindFirstValue(ClaimTypes.Email)))
                                {
                                    <li>
                                        <a href="/Admin/Quotes">نقل قول ها</a>
                                    </li>
                                }
                                @if (_permissionService.CheckPermission(PerIds.AdminBlogs, User.FindFirstValue(ClaimTypes.Email)))
                                {
                                    <li>
                                        <a href="/Admin">بخش بلاگ ها<span class="fa arrow"></span></a>
                                        <ul class="nav nav-third-level">
                                            <li>
                                                <a href="/Admin/BlogCategories"> دسته بندی های بلاگ ها</a>
                                            </li>
                                            <li>
                                                <a href="/Admin/Blogs">بلاگ ها</a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                @if (_permissionService.CheckPermission(PerIds.AdminReportAbuses, User.FindFirstValue(ClaimTypes.Email)))
                                {
                                    <li>
                                        <a href="/Admin/ReportAbuses">گزارشات تخلف</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>
    <script src="/AdminPanel/js/jquery-1.10.2.js"></script>
    <script src="/AdminPanel/js/bootstrap.min.js"></script>
    <script src="/AdminPanel/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/AdminPanel/js/plugins/morris/raphael-2.1.0.min.js"></script>
    <script src="/AdminPanel/js/plugins/morris/morris.js"></script>
    <script src="/AdminPanel/js/sb-admin.js"></script>
    <script src="/AdminPanel/js/demo/dashboard-demo.js"></script>
    <script src="https://unpkg.com/persian-date@1.1.0/dist/persian-date.min.js"></script>
    <script src="https://unpkg.com/persian-datepicker@1.2.0/dist/js/persian-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>