@page
@model ShoraaDahak.Web.Pages.Admin.LetterTos.DeleteLetterToModel
@{
    ViewData["Title"] = "حذف مقصد نامه";
}

<div class="row">
    <div class="col-md-9">
        <h1 class="page-header text-danger">حذف مقصد </h1>
    </div>
    <div class="col-md-3">
        <a asp-page="Index" class="btn btn-outline btn-primary">لیست مقصد ها</a>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <form method="post">
        <input type="hidden" asp-for="LetterTo.LetterToId" />
        <input type="hidden" asp-for="LetterTo.LetterToTitle" />
        <div class="col-md-7">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    اطلاعات مقصد
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان مقصد</label>
                        <h4 class="text-danger">@Model.LetterTo.LetterToTitle</h4>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-7">
            <button type="submit" class="btn btn-danger btn-lg btn-block">حذف مقصد</button>
        </div>
    </form>
</div>
