@page "{id?}"
@model ShoraaDahak.Web.Pages.Admin.ServiceGroups.CreateServiceGroupModel
@{
    ViewData["Title"] = "افزودن گروه جدید";
}

<div class="row">
    <div class="col-md-9">
        <h1 class="page-header">افزودن گروه جدید</h1>
    </div>
    <div class="col-md-3">
        <a asp-page="Index" class="btn btn-outline btn-primary">لیست گروه ها</a>
    </div>
</div>
<div class="row">
    <form method="post">
        <input type="hidden" asp-for="ServiceGroup.ParrentId"/>
        <div class="col-12 col-md-7">
            <div class="panel panel-info">
                <div class="panel-heading">
                    اطلاعات گروه
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه</label>
                        <input type="text" asp-for="ServiceGroup.GroupTitle" class="form-control" placeholder="عنوان گروه را وارد کنید ">
                        <span asp-validation-for="ServiceGroup.GroupTitle" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-12 col-md-7">
            <button type="submit" class="btn btn-success btn-lg btn-block">ثبت گروه</button>
        </div>
    </form>
</div>
