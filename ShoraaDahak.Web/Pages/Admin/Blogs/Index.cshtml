@page
@using ShoraaDahak.Core.Convertors
@model ShoraaDahak.Web.Pages.Admin.Blogs.IndexModel
@{
    ViewData["Title"] = "لیست بلاگ ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست بلاگ ها</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-page="CreateBlog" class="btn btn-outline btn-success">افزودن بلاگ</a>
    </div>
</div>
<br />
<div class="col-md-9">
    <div class="panel panel-info">
        <div class="panel-heading">
            لیست بلاگ ها
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr>
                                <th>تیتر</th>
                                <th>نویسنده</th>
                                <th>توضیح کوتاه</th>
                                <th>دسته بندی</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Blogs)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Writer</td>
                                        <td>@item.MiniDescription</td>
                                        <td>@item.Category</td>
                                        <td>
                                            <a asp-page="EditBlog" asp-route-Id="@item.BlogId" class="btn btn-outline btn-info btn-sm">ویرایش</a>
                                            <a asp-page-handler="DeleteBlog" onclick="return confirm('آیا از حذف این بلاگ مطمعن هستید ؟')" asp-route-Id="@item.BlogId" class="btn btn-outline btn-danger btn-sm">حذف</a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-12 col-md-3">
    <div class="panel panel-success">
        <div class="panel-heading">
            <i class="fa fa-bell fa-fw"></i>  آمار بخش بلاگ ها
        </div>
        <div class="panel-body">
            <div class="list-group">
                <a class="list-group-item">
                    <i class="fa fa-question"></i> بلاگ های ثبت شده توسط آقایان
                    <span class="pull-left text-info small">
                        <em>@ViewData["BlogByMans"] مورد</em>
                    </span>
                </a>
                <a class="list-group-item">
                    <i class="fa fa-react"></i> بلاگ های ثبت شده توسط خانم ها
                    <span class="pull-left text-muted small">
                        <em class="txtpurp">@ViewData["BlogByWomen"] مورد </em>
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>
