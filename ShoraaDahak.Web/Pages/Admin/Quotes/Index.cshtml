@page
@model ShoraaDahak.Web.Pages.Admin.Quotes.IndexModel
@{
    ViewData["Title"] = "لیست نقل قول ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقل قول ها</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-page="CreateQuote" class="btn btn-outline btn-success">افزودن نقل قول</a>
    </div>
</div>
<br />
<div class="col-md-9">
    <div class="panel panel-info">
        <div class="panel-heading">
            لیست نقل قول ها
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr>
                                <th>تصویر گوینده</th>
                                <th>گوینده</th>
                                <th>شغل گوینده</th>
                                <th>نقل قول</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Quotes)
                                {
                                    <tr>
                                        <td>
                                            <img src="/Quote/thumb/@item.QuoteImageName"/>
                                        </td>
                                        <td>@item.QuoteBy</td>
                                        <td>@item.QuoterJob</td>
                                        <td>@Html.Raw(item.QuoteBody)</td>
                                        <td>
                                            <a asp-page="EditQuote" asp-route-Id="@item.QuoteId" class="btn btn-outline btn-info btn-sm">ویرایش</a>
                                            <a asp-page-handler="Delete" onclick="return confirm('آیا از حذف این نقل قول مطمعن هستید ؟')" asp-route-Id="@item.QuoteId" class="btn btn-outline btn-danger btn-sm">حذف</a>
                                        </td>
                                    </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-12 col-md-3">
    <div class="panel panel-success">
        <div class="panel-heading">
            <i class="fa fa-bell fa-fw"></i>  آمار بخش نامه ها
        </div>
        <div class="panel-body">
            <div class="list-group">
                <a class="list-group-item">
                    <i class="fa fa-question"></i> نقل قول های ثبت شده
                    <span class="pull-left text-success small">
                        <em>@ViewData["TotalQuotes"] مورد</em>
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>