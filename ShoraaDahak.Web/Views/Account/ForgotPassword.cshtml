@model ShoraaDahak.Core.DTOs.ForgotPasswordViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

<div class="breadcrumbs_wrap dark mb-1">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="text-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti-home"></i></a></li>
                            <li class="breadcrumb-item active" aria-current="page">فراموشی رمز عبور</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.IsSuccess != null)
{
    <div class="row align-items-center justify-content-center">
        <div class="col-md-8 col-sm-8 col-lg-8 alert alert-success m-4">
            <p>
            ایمیل بازیابی رمز عبور برای شما ارسال شد. بررسی کنید
            </p>
        </div>
    </div>
}

<section>
    <div class="container">

        <div class="row align-items-center justify-content-center">

            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="login_signup">
                    <h3 class="login_sec_title">ورود</h3>
                    <form asp-action="ForgotPassword" method="post">

                        <div class="form-group">
                            <label>ایمیل</label>
                            <input type="email" asp-for="Email" class="form-control">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="login_flex">
                            <div class="login_flex_2">
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-md btn-theme">بازیابی</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

