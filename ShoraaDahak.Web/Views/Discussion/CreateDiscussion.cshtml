@model ShoraaDahak.DataLayer.Models.Discussion.Discussion

@{
    ViewData["Title"] = "ایجاد بحث جدید";
}

<div class="breadcrumbs_wrap dark mb-1">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="text-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti-home"></i></a></li>
                            <li class="breadcrumb-item active" aria-current="page">بحث مردمی</li>
                            <li class="breadcrumb-item active" aria-current="page">ایجاد بحث جدید</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<section>
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="login_signup">
                    <h3 class="login_sec_title">ایجاد بحث جدید</h3>
                    <form asp-action="CreateDiscussion">
                        <input type="hidden" asp-for="ServiceId" />
                        <div class="row">

                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>موضوع</label>
                                    <input type="text" asp-for="DiscussionTitle" class="form-control">
                                    <span asp-validation-for="DiscussionTitle" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>میزان اهمیت</label>
                                    <select asp-for="ImpLevelId" class="form-control" asp-items="ViewBag.ImpLevels"></select>
                                    <span asp-validation-for="ImpLevelId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label>متن</label>
                                    <textarea type="text" asp-for="DiscussionBody" class="form-control" rows="12"></textarea>
                                    <span asp-validation-for="DiscussionBody" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12">
                                <div class="login_flex_2">
                                    <div class="form-group mb-0">
                                        <button type="submit" class="btn btn-md btn-theme">ثبت</button>
                                    </div>
                                </div>
                                <div class="login_flex">
                                    <div class="login_flex_1">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<div>
    <a asp-action="Index">بازگشت</a>
</div>

@section Scripts
{
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('DiscussionBody', {
            customConfig: '/js/Config.js'
        });
    </script>
}

