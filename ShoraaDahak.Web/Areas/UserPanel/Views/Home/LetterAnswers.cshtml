@using ShoraaDahak.Core.Convertors
@using System.Security.Claims
@model List<ShoraaDahak.DataLayer.Models.Letter.LetterAnswer>
@{
    ViewData["Title"] = "پاسخ به من";
}
<div class="breadcrumbs_wrap dark">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="text-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti-home"></i></a></li>
                            <li class="breadcrumb-item" aria-current="page"><a href="/UserPanel">پنل کاربری</a></li>
                            <li class="breadcrumb-item active" aria-current="page">پاسخهای من </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="gray">
    <div class="container">
        <div class="row">
            <partial name="_PanelSideBar" />
            <div class="col-lg-8 col-md-9">
                @if (Model.Count != 0)
                {
                    <div class="card style-2">
                        <div class="card-header">
                            <h4 class="mb-0">پاسخ های ثبت شده</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">خطاب به</th>
                                            <th scope="col">فرستنده</th>
                                            <th scope="col">دریافت کننده</th>
                                            <th scope="col">تاریخ ارسال</th>
                                            <th scope="col">متن</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var answer in Model)
                                        {
                                            <tr>
                                                <td>@answer.Letter.LetterTitle</td>
                                                <th scope="row">
                                                    @answer.User.Name
                                                </th>
                                                <td>@User.Identity.Name</td>
                                                <td>@answer.CreateDate.ToShamsi()</td>
                                                <td>@Html.Raw(answer.LetterAnswerBody)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning m-4">
                        هنوز نامه ای ارسال نکرده اید.
                    </div>
                    <div class="alert alert-info m-4">
                        میتوانید از طریق <a href="/SendLetter">ارسال نامه</a> نامه حود را ارسال کنید.
                    </div>
                }
            </div>
        </div>
    </div>
</section>