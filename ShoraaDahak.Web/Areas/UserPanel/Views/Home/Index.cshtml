@using ShoraaDahak.Core.Convertors
@model ShoraaDahak.Core.DTOs.UserInformationViewModel
@{
    ViewData["Title"] = "پنل کاربری";
}
<div class="breadcrumbs_wrap dark">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="text-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti-home"></i></a></li>
                            <li class="breadcrumb-item active" aria-current="page">پنل کاربری</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="gray">
    <div class="container">
        <div class="row">
            <partial name="_PanelSideBar" />
            <div class="col-lg-8 col-md-9">
                <div class="card style-2">
                    <div class="card-header">
                        <h4 class="mb-0">جزییات حساب</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>نام</label>
                                    <input class="form-control" type="text" value="@Model.Name" disabled="disabled">
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>کد ملی</label>
                                    <input class="form-control" type="number" value="@Model.NCode" disabled="disabled">
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>ایمیل</label>
                                    <input class="form-control" type="email" placeholder="ایمیل" value="@Model.Email" disabled="disabled">
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>شماره تلفن</label>
                                    <input class="form-control" type="number" value="@Model.PhoneNumber" disabled="disabled">
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>تاریخ تولد</label>
                                    <input class="form-control" type="text" value="@Model.BirthDate.ToShamsi()" disabled="disabled">
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label>تاریخ ثبت نام</label>
                                    <input class="form-control" type="text" value="@Model.RegisterDate.ToShamsi()" disabled="disabled">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
