@using ShoraaDahak.Core.Convertors
@model ShoraaDahak.Core.DTOs.EditUserInfoViewModel
@{
    ViewData["Title"] = "ویرایش اطلاعات";
}

<div class="breadcrumbs_wrap dark">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="text-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti-home"></i></a></li>
                            <li class="breadcrumb-item" aria-current="page"><a href="/UserPanel">پنل کاربری</a></li>
                            <li class="breadcrumb-item active" aria-current="page">ویرایش اطلاعات</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="gray">
    <div class="container">
        <div class="row">
            <partial name="_PanelSideBar" />
            <div class="col-lg-8 col-md-9">
                <div class="card style-2">
                    <div class="card-header">
                        @if (ViewBag.IsSuccess != null)
                        {
                            <div class="alert alert-success">
                                <p> اطلاعات شما با موفقیت ویرایش شد. </p>
                            </div>
                            <div class="alert alert-warning">
                                <p> لطفا جهت ثبت دقیق اطلاعات یک بار از حساب کاربری <a href="/Logout">خارج</a> و دوباره وارد شوید </p>
                            </div>
                        }
                        <h4 class="mb-0">ویرایش اطلاعات</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditInfo" method="post" class="submit-page">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>نام</label>
                                        <input class="form-control" type="text" asp-for="Name" >
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>کد ملی</label>
                                        <input class="form-control" type="text" asp-for="NCode">
                                        <span asp-validation-for="NCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>ایمیل ( قابل تغییر نیست )</label>
                                        <input class="form-control border-warning" type="email" asp-for="Email" disabled="disabled">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>شماره تلفن</label>
                                        <input class="form-control" type="number" asp-for="PhoneNumber">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>تاریخ تولد</label>
                                        <input class="form-control" type="date" asp-for="BirthDate">
                                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-success" type="submit">ویرایش</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




