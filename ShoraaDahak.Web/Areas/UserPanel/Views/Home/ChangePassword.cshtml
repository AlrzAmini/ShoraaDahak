@model ShoraaDahak.Core.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "ویرایش رمز عبور";
}

<div class="breadcrumbs_wrap dark">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="text-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti-home"></i></a></li>
                            <li class="breadcrumb-item" aria-current="page"><a href="/UserPanel">پنل کاربری</a></li>
                            <li class="breadcrumb-item active" aria-current="page">ویرایش رمز عبور</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="gray">
    <div class="container">
        <div class="row">
            <partial name="_PanelSideBar" />
            <div class="col-lg-8 col-md-9">
                <div class="card style-2">
                    <div class="card-header">
                        @if (ViewBag.IsSuccess != null)
                        {
                            <div class="alert alert-success">
                                <p> رمز عبور شما با موفقیت ویرایش شد. </p>
                            </div>
                            <div class="alert alert-warning">
                                <p> لطفا جهت ثبت دقیق اطلاعات یک بار از حساب کاربری <a href="/Logout">خارج</a> و دوباره وارد شوید </p>
                            </div>
                        }
                    <h4 class="mb-0">ویرایش رمز عبور</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="ChangePassword" method="post" class="submit-page">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>رمز عبور فعلی</label>
                                        <input class="form-control" type="password" asp-for="OldPassword">
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>رمز عبور جدید</label>
                                        <input class="form-control" type="password" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label>تکرار رمز عبور</label>
                                        <input class="form-control" type="password" asp-for="RePassword">
                                        <span asp-validation-for="RePassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-success" type="submit">ویرایش</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
